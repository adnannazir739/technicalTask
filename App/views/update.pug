head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width,minimum-scale=1')
  title Update
  // the form awesome library is used to add icons to our form
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.1/css/all.css')
  // include the stylesheet file
  link(href='css/style.css' rel='stylesheet' type='text/css')
.form
  h1 Update Question
  form(action='/questions/updated' method='post')
    label(for='username')
      // font awesome icon
      i.fas.fa-user
    input#title(type='text' name='title' placeholder='Title' value=title required='')
    label(for='password')
      i.fas.fa-lock
    input#description(type='text' name='description' placeholder='Description' value= description required='')
    input#pid(type='hidden' name='pid' value=id)
    input(type='submit' value='Save')

h4
a.btn.btn-primary(href='/questions/values' role='button') Back to Questions 